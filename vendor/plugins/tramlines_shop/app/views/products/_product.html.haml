    =link_to(product, product)
  .product_details
    .product_thumbnail
      =link_to(image_for(product, '150x150'), product)
    .product_overview
      -unless product.sku.blank?
        %p
          Product code:
          =product.sku
      %p=product.overview
  .product_price_box    
    .price=number_to_currency product.price_in_pounds, :unit => 'Â£'
    =render :partial => 'cart_items/form', :locals => {:product => product}
