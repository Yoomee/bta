-content_for(:head) do
  =javascript_include_tag :ckeditor
-semantic_form_for(post) do |form|
  -form.inputs do
    =form.input :topic_id, :as => :hidden
    =form.input :member_id, :as => :hidden
    =form.input :subject
    =form.input :message, :as => :ck_text
    -if false
      =form.input :upload_file, :help => "You can also upload a file for your post. People will be able to download this file."
  -form.buttons do
    =form.commit_button post.new_record? ? "Post" : "Update"

