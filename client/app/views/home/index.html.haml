#community_row
  -unless @campaign.nil?
    #campaign_box
      =image_tag(@campaign.front_page_image.url)
      %h4=@campaign.name
  #forum_box
    %h3.title
      =link_to "BTA forum ", forum_path(1)
    %ul.lst
      -unless @forum_topics.blank?
        -@forum_topics.each do |topic|
          %li
            =link_to topic.subject, topic
            %p
              %span= "#{pluralize(topic.posts.count, "post")}."
              ="Last post at #{topic.get_last_post.updated_on.strftime("%H:%M on %m %B")}"
  #facebook_box
    %h3.title
      =link_to "Facebook ", "#"
    =facebook_like_box("http://www.facebook.com/BritishTinnitusAssociation")
  #twitter_box
    %h3.title
      =link_to "Twitter ", "http://www.twitter.com/britishtinnitus"
    %p.tweet  
      =highlight_tweet_links(@latest_tweet)
