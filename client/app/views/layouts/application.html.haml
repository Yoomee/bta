!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml", "xmlns:fb" => "http://www.facebook.com/2008/fbml" }
  %head
    %title
      = site_name
      \:
      = site_slogan
      \//
      = page_title
      = page_subtitle
    %meta{ :name => "Generator", :content => "Yoomee (Ruby on Rails)" }
    %meta{ :name => "robots", :content => "index, follow" }
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "info", :content => "#{page_title}#{page_subtitle}" }
    %link{ :href => "/images/favicon.ico", :rel => "shortcut icon" }
    = google_javascripts :jquery, :jqueryui
    = javascript_include_tag 'jrails'
    = javascript_include_tag 'jquery.cycle'
    = javascript_include_tag 'tramlines'
    = javascript_include_tag "client/autoresize.jquery.min.js"
    
    = stylesheet_link_tag 'jquery-ui'
    = formtastic_stylesheet_link_tag
    =yield :head
    = stylesheet_link_tag 'client/styles'
    -unless current_page?(new_session_path)
      :javascript
        $(document).ready(function(){    
          $('.cycle').cycle({
            fx: 'fade',
            speed: 'slow',
            timeout: 15000,
            easing: 'easeOutQuint',
            pager:  '#other_case_studies ul', 
                pagerAnchorBuilder: function(idx, slide) { 
                    // return selector string for existing anchor 
                    return '#other_case_studies ul li:eq(' + idx + ') a';
                }     
          });  
          $('#direct').click(function() { 
              $('#other_case_studies ul li:eq(2) a').trigger('click'); 
              return false; 
          });      
          $("#member_login_bttn").click(function () {
            $("#login_slide_bar").slideToggle("slow");
            $("#member_login_bttn").toggleClass("open");
          });
        });
  - page_or_section = @section.nil? ? (@page.nil? ? nil : @page.section) : @section
  - body_tag(:class => "#{'campaigns' if !page_or_section.nil? && page_or_section.absolute_root.slug == 'campaigns'}") do  
    #wrapper    
      #top
        =render_flash
        =render :partial => 'layouts/nav'
      -unless current_page?(new_session_path)
        #login_slide_bar
          #login_slide_bar_inside
            =render :partial=>'sessions/form'
      #header
        #header_inside
          =render :partial => 'layouts/header'
          
      #lower_wrapper
        #lower_wrapper_inside
          -if !page_or_section.nil? && page_or_section.absolute_root.slug == 'campaigns'
            #bta_home
              %h2
                =link_to site_name, :home
              %p  
                The British Tinnitus Association (BTA) is a world leader, with a trained team of friendly and experienced advisors for anyone who experiences tinnitus or those simply seeking guidance or information about the condition.
          -if viewing_blog?
            #sidebar_col
              #subnav=render_blog_sidebar
          -elsif !@content_for_sidebar.blank?
            #sidebar_col= yield :sidebar 
          #main.content            
            -unless hide_page_title?
              %h1#page_title=page_title
            =@content_for_layout
            %br.clear
        #footer
          =render :partial => 'layouts/footer'
    =tramlines_facebook_connect_receiver