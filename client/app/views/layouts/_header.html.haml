- page_or_section = @section.nil? ? (@page.nil? ? nil : @page.section) : @section
-if !page_or_section.nil? && page_or_section.absolute_root.slug == 'campaigns'
  %img{:src => '/images/campaign_header.jpg'}
  =link_to site_name, :home, :class=>'bta_home_link'
-else
  #logo_box
    %h1#site_logo
      =link_to site_name, :home
    %p The British Tinnitus Association (BTA) is a world leader, with a trained team of friendly and experienced advisors for anyone who experiences tinnitus or those simply seeking guidance or information about the condition.  
  #user_links
    .search_box
      %form{ :action => "/search/results", :method => "post" }
        %input.search_field#header_search_field{ :name => "term", :type => "text", :value => "Search", :onfocus => "var element =   document.getElementById('header_search_field');element.value='';" }
        %input.search_icon{ :name => "commit", :title => "search", :value => "search" }
    =link_to "Cart (#{find_existing_cart.items.count})<span></span>", cart_path, :id=>'cart_link'  if !find_existing_cart.nil? &&   !find_existing_cart.items.count.zero? 
    - if logged_in?
      =facebook_session ? facebook_connect_logout_link : link_to('Logout', session_url, :method => :delete)  
      =link_if_allowed 'Site settings', admin_proc
      %strong
        =link_to(@logged_in_member.full_name, member_path(@logged_in_member))
    - elsif !current_page?(new_session_path)
      %p=link_to('login / sign up', '#', :id => 'member_login_bttn')
    =link_to_remote "#{in_mobile_view? ? 'Standard site' : 'Mobile site'}", :url =>{:controller => 'mobile', :action => 'toggle'}

-if is_home?
  #home_header
    #case_study_carousel
      .cycle
        -@carousel_pages.each do |page|
          .slide
            #case_study_image
              =photo_for(page, '525x351')
            #case_study_quote
              =render_carousel_quote(page)    
              =link_to snippet(page, :carousel_button_text), page, :id=>'learn_more_bttn', :class=>'bttn_round'
      #other_case_studies
        %h4 Other Stories
        %ul.lst
          -@carousel_pages.each do |page|
            %li=link_to photo_for(page, '525x351'), "#"                                          
    #get_suppport
      %h2
        Get support
        
      %ul.lst
        %li
          -link_to(slug_path("about_tinnitus"), :id => "find_out_more") do
            %h5 Learn more
            %p Find out more about tinnitus
        %li
          -link_to("#", :id => "support_call") do
            %h5 Speak to someone
            %p Call our confidential helpline
            %p.phone_number 0800 018 0527
        %li
          -link_to(department_path(1), :id => "support_shop") do
            %h5 Visit our shop
            %p Find products that can help you
        -if false    
          %li
            -link_to(forum_path(1), :id => "support_forum") do
              %h5 Share your story
              %p Visit our Forum
          
          
%br.clear  